{% extends "/backoffice/layout.html.twig" %}

{% block content %}

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        {% if articles %}
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Title</th>
                    <th>Label</th>
                    <th>Body</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for article in articles %}
                <tr>
                    <td>{{ article.getName() }}</td>
                    <td>{{ article.getTitle() }}</td>
                    <td>{{ article.getLabel() }}</td>
                    <td>{{ article.getBody() }}</td>
                    <td><a href="/backoffice/article/{{ article.getName() }}/edit">Edit</a></td>
                    <td><a href="/backoffice/article/{{ article.getName() }}/delete">Delete</a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        {% else %}
            <h1>Articles does not exist</h1>
        {% endif %}
        <a href="/backoffice/article/0/edit" class="btn btn-default">Add article</a>
    </div>
</div>

{% endblock %}