{% extends "/backoffice/layout.html.twig" %}

{% block content %}

    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <form action="" method="post">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" id="title" name="data[title]" value="{{ data['title'] ?? null }}">
                    <label for="label">Label</label>
                    <input type="text" class="form-control" id="label" name="data[label]" value="{{ data['label'] ?? null}}">
                    <label for="body">Body</label>
                    <input type="text" class="form-control" id="body" name="data[body]" value="{{ data['body'] ?? null }}">
                </div>
                <button type="submit" class="btn btn-default" name="article_form[submit]" value="submit">Edit</button>
                <a href="/backoffice/articles" class="btn btn-default">Back</a>
            </form>
        </div>
    </div>

{% endblock %}
