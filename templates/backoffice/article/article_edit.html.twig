{% extends "/backoffice/layout.html.twig" %}

{% block content %}

    <div class="page-header text-center">
        <h1>Article edit</h1>
    </div>

    <div class="row">
        <div class="col-md-4 col-md-offset-4">

            {% if errors %}
                <ul>
                    {% for error in errors %}
                        <li>{{ error }}</li>
                    {% endfor %}
                </ul>
            {% endif %}

            <form action="/backoffice/article/{{ name }}/edit" method="post">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" id="name" name="data[name]" value="{{ data['name'] ?? null }}">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" id="title" name="data[title]" value="{{ data['title'] ?? null }}">
                    <label for="label">Label</label>
                    <input type="text" class="form-control" id="label" name="data[label]" value="{{ data['label'] ?? null}}">
                    <label for="body">Body</label>
                    <textarea name="data[body]" id="body" class="form-control">{{ data['body'] ?? null }}</textarea>
                </div>
                <button type="submit" class="btn btn-default" name="data[submit]" value="submit">Edit</button>
                <a href="/backoffice/articles" class="btn btn-default">Back</a>
            </form>
        </div>
    </div>

{% endblock %}
